# vim: set ft=sh:

type -P most &>/dev/null
if [ $? == 0 ]; then
	MOST=`which most`
fi
case $(uname -s) in
	Linux)
		export JAVA_HOME="/usr/lib/jvm/java-6-sun"
		export DEV_HOME="$HOME/dev"
		export ANDROID_HOME="$DEV_HOME/android-sdk-linux_x86"
		export PATH="$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:/var/lib/gems/1.8/bin:$PATH"
		export GREP_OPTIONS='--color=auto --mmap --exclude-dir=\.svn --exclude-dir=\.git --exclude=*\.swp'
		export APPENGINE_HOME="$DEV_HOME/google_appengine"
		if [ -n "$MOST" ]; then export MANPAGER="$MOST -s"; fi
	;;
	Darwin)
		export DEV_HOME="$HOME/Development"
		export ANDROID_HOME="$DEV_HOME/android-sdk-macosx"
		export PATH="$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$PATH"
		export JAVA_HOME=$(/usr/libexec/java_home)
		export APPENGINE_HOME="/usr/local/google_appengine"
		export GREP_OPTIONS='--color=auto --mmap --exclude=*\.swp'
		export NODE_PATH="/usr/local/lib/node_modules:$NODE_PATH"
		if [ -n "$MOST" ]; then export MANPAGER="$MOST -s"; fi
	;;
	FreeBSD)
		export LESS="-EmrSwX"
		export DEV_HOME="$HOME/dev"
		export JAVA_HOME="/usr/local/diablo-jdk1.6.0"
		export APPENGINE_HOME="$DEV_HOME/google_appengine"
		export GREP_OPTIONS='--color=auto --mmap --exclude=*\.swp'
		if [ -n "$MOST" ]; then alias man="man -P $MOST"; fi
	;;
esac


export FULLNAME="Gasol Wu"
export EMAIL="gasol.wu@gmail.com"
export HGUSER=$FULLNAME
export DEBFULLNAME=$FULLNAME
export DEBEMAIL=$EMAIL
export EDITOR="vim"

export GOROOT="$DEV_HOME/go"
export PLAY_HOME="$DEV_HOME/play"
export MAVEN_HOME="$DEV_HOME/apache-maven"
export ANT_HOME="$DEV_HOME/apache-ant"
export AWS_IAM_HOME="$DEV_HOME/IAMCli-1.2.0"
export TITANIUM_HOME="$DEV_HOME/Titanium\\ Developer-1.2.2"
export GRADLE_HOME="$DEV_HOME/gradle"
export CLOSURE_HOME="$DEV_HOME/closure"
export WHIRR_HOME="$DEV_HOME/whirr"
export ELASTIC_MAPREDUCE_HOME="$DEV_HOME/elastic-mapreduce-cli"
export AXIS2_HOME="$DEV_HOME/axis2"
export APPENGINE_JAVA_HOME="$DEV_HOME/appengine-java-sdk"
export JAVAFX_SDK="$DEV_HOME/javafx-sdk"
export SCALA_HOME="$DEV_HOME/scala"
export DERBY_HOME="$DEV_HOME/db-derby"

export PATH="$HOME/bin:/usr/local/bin:$GOROOT/bin:$GRADLE_HOME/bin:$ELASTIC_MAPREDUCE_HOME:$AWS_IAM_HOME/bin:$ANT_HOME/bin:$PLAY_HOME:$MAVEN_HOME/bin:$WHIRR_HOME/bin:$AXIS2_HOME/bin:$APPENGINE_HOME:$APPENGINE_JAVA_HOME/bin:$JAVAFX_SDK/bin:$SCALA_HOME/bin:$DERBY_HOME/bin:$PATH"

if [ -e $HOME/.ec2 ]; then
	export EC2_PRIVATE_KEY=`\find $HOME/.ec2 -maxdepth 1 -name 'pk-*.pem' 2> /dev/null`
	export EC2_CERT=`\find $HOME/.ec2 -maxdepth 1 -name 'cert-*.pem' 2> /dev/null`
	export EC2_HOME="$DEV_HOME/ec2-api-tools"
	export PATH="$EC2_HOME/bin:$PATH"
fi
