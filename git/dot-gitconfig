# vim: sw=4 ts=4
[user]
    name = Gasol Wu
    email = gasol.wu@gmail.com
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
[push]
    default = current
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[alias]
    cm = commit
    ca = commit --amend
    df = diff
    rb = rebase
    rbc = rebase --continue
    rba = rebase --abort
    st = status
    co = checkout
    br = branch
    staged = diff --staged
    who = shortlog -s --
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[core]
	excludesfile = ~/.gitignore
[init]
	defaultBranch = main
[pull]
	rebase = false
