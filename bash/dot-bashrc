# vim: ft=sh

# If not running interactively, don't do anything
case $- in
	*i*) ;;
	*) return;;
esac

shopt -s histappend
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=1073741824
HISTFILESIZE=1073741824

shopt -s checkwinsize
shopt -s cmdhist

if [ -z "$debian_chroot" ] && [ -r /etc/debian_chroot ]; then
	debian_chroot=$(cat /etc/debian_chroot)
fi

PS1='${debian_chroot:+($debian_chroot)}\[\033[01;28m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]$(__git_ps1 " (\[\e[32;1m\]%s\[\e[0m\])") \$ '

keychain=$(type -p keychain)

if [ -n "$keychain" ]; then
	keychain_args="--timeout 60"
	case $(uname -s) in
		Darwin)
			keychain_args="$keychain_args --inherit any"
			;;
	esac
	eval $($keychain $keychain_args)
	. ~/.keychain/$HOSTNAME-sh
fi

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

if [ -f ~/.bash_exports ]; then
    . ~/.bash_exports
fi

if [ -f ~/.bash_local ]; then
    . ~/.bash_local
fi

function load_rcfile {
    if [ -d $1 ]; then
        for content in `\ls $1`; do
            if [ -d $1 ]; then
                load_rcfile $1/$content
            elif [ -f $1 ]; then
                source $1/$content
            fi
        done
    elif [ -f $1 ]; then
        source $1
    fi
}

load_rcfile ~/.bash/rc.os/`uname -s`
load_rcfile ~/.bash/rc.host/$HOSTNAME
load_rcfile ~/.bash/rc
load_rcfile ~/.bash/misc
export BASH_SILENCE_DEPRECATION_WARNING=1
